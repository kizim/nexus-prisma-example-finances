datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator photon {
  provider = "photonjs"
}

model User {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  role      UserRole @default(EMPLOYEE)
  accounts  Account[]
}

model Account {
  id            Int      @id
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  currency      Currency @default(USD)
  user          User
  transactions  Transaction[]
}

model Transaction {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount    Float
  account   Account
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum Currency {
  USD
  EUR
  RUB
}