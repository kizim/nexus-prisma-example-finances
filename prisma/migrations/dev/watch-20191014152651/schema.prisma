datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator photon {
  provider = "photonjs"
}

model User {
  id        Int       @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  role      UserRole  @default(EMPLOYEE)
  accounts  Account[] @relation(onDelete: CASCADE)
}

model Account {
  id            Int           @id
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  currency      Currency      @default(USD)
  balance       Float         @default(0)
  user          User
  transactions  Transaction[] @relation(onDelete: CASCADE)
}

model Transaction {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount    Float
  account   Account
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum Currency {
  USD
  EUR
  RUB
}